<UserControl x:Class="Monopoly.DiceRack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mp="clr-namespace:Monopoly"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3" 
                Name="roll_button" Click="Button_Click">
            <Image Source="Resources/dice_icon.png" />
        </Button>
        <mp:Dice x:Name="d1" Grid.Column="0" Margin="3" Tag="1"/>
        <mp:Dice x:Name="d2" Grid.Column="1" Margin="3" Tag="2"/>
    </Grid>
</UserControl>
